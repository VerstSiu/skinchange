<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="12dp"
  android:tag="skin:view_bg:background"
  android:background="@color/view_bg">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/item_bg_round"
    android:textColor="@color/item_text_color"
    android:tag="skin:item_bg_round:background|skin:item_text_color:textColor"
    android:text="@string/simple_test_title"/>

  <Button
    android:id="@+id/button_toggle_skin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginTop="24dp"
    android:text="@string/simple_test_action_toggle_skin"/>

  <Button
    android:id="@+id/button_reset"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginTop="4dp"
    android:text="@string/simple_test_action_reset"/>

</LinearLayout>