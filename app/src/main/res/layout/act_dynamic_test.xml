<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/case_dynamic_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/case_dynamic_linear"/>

  <Button
    android:id="@+id/case_dynamic_recycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/case_dynamic_recycler"/>

  <Button
    android:id="@+id/case_dynamic_pager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/case_dynamic_pager"/>

</LinearLayout>