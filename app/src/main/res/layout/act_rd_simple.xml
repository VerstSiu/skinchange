<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/test_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/base_simple_text_bg"
    android:tag="group:delay|skin:base_simple_text_bg:textColor"
    android:text="Hello World!"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/action_toggle_skin"/>

  <Button
    android:id="@+id/action_toggle_skin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/action_toggle_skin"
    android:layout_marginTop="24dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/test_message"
    app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>