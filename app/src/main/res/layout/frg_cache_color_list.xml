<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/base_page_bg"
  android:tag="skin:base_page_bg:background">

  <CheckBox
    android:id="@+id/check_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/simple_label_min_width"
    android:padding="8dp"
    android:gravity="center"
    android:background="@drawable/cache_item_bg_selector"
    android:textColor="@drawable/cache_item_text_color_selector"
    android:tag="skin:cache_item_bg_selector:background|skin:cache_item_text_color_selector:textColor"
    android:text="@string/label_simple_child_view"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/check_middle"/>

  <CheckBox
    android:id="@+id/check_middle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:minWidth="@dimen/simple_label_min_width"
    android:padding="8dp"
    android:gravity="center"
    android:background="@drawable/cache_item_bg_selector"
    android:textColor="@drawable/cache_item_text_color_selector"
    android:tag="skin:cache_item_bg_selector:background|skin:cache_item_text_color_selector:textColor"
    android:text="@string/label_simple_child_view"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/check_top"
    app:layout_constraintBottom_toBottomOf="@id/check_bottom"/>

  <CheckBox
    android:id="@+id/check_bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:minWidth="@dimen/simple_label_min_width"
    android:padding="8dp"
    android:gravity="center"
    android:background="@drawable/cache_item_bg_selector"
    android:textColor="@drawable/cache_item_text_color_selector"
    android:tag="skin:cache_item_bg_selector:background|skin:cache_item_text_color_selector:textColor"
    android:text="@string/label_simple_child_view"
    app:layout_constraintVertical_chainStyle="packed"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/check_middle"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>