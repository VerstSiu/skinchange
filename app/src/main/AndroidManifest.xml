<?xml version="1.0" encoding="utf-8"?>
<manifest
  xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.ijoic.skinchange">

  <!-- permission for skin apk copy -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
    android:name=".SkinApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <!-- main -->
    <activity android:name=".MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <!-- simple -->
    <activity
      android:name=".test.SimpleTestActivity"
      android:label="@string/case_simple"/>

    <!-- recycler -->
    <activity
      android:name=".test.RecyclerTestActivity"
      android:label="@string/case_recycler"/>

    <!-- pager -->
    <activity
      android:name=".test.pager.PagerTestActivity"
      android:label="@string/case_pager"/>

    <!-- nested pager -->
    <activity
      android:name=".test.pager.NestedPagerTestActivity"
      android:label="@string/case_nested_pager"/>

    <!-- host -->
    <activity
      android:name=".test.host.HostTestActivity"
      android:label="@string/case_host"/>

    <!-- partial -->
    <activity
      android:name=".test.partial.PartialTestActivity"
      android:label="@string/case_partial"/>

    <activity android:name="rd.ijoic.skinchange.SimpleActivity"/>

  </application>

</manifest>